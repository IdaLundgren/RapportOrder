<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <View
        android:id="@+id/list_decor_left"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@color/RED"/>

    <TextView
        android:id="@+id/lbl_date_list_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_decor_left"
        android:textSize="20dp"
        android:text="12"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/lbl_date_day_list_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_decor_left"
        android:layout_below="@+id/lbl_date_list_detail"
        android:textSize="16dp"
        android:text="Tors"
        android:layout_marginLeft="20dp"/>

    <View
        android:id="@+id/order_list_detail_item_divider"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/lbl_date_day_list_detail"
        android:background="@color/list_divider_grey"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/lbl_order_list_detial_item_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Snöplogning av område"
        android:layout_toRightOf="@id/order_list_detail_item_divider"
        android:layout_marginLeft="20dp"
        android:textSize="16dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"/>
    <View
        android:id="@+id/icon_order_list_item_clock"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:background="@drawable/ic_access_time_black_24dp"
        android:layout_toRightOf="@id/order_list_detail_item_divider"
        android:layout_below="@+id/lbl_order_list_detial_item_desc"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/lbl_order_list_detial_item_time"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:text="Utförd tid: 9 timmar"
        android:layout_toRightOf="@id/icon_order_list_item_clock"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/lbl_order_list_detial_item_desc"
        android:textSize="12dp"
        android:layout_marginTop="5dp"/>
</RelativeLayout>